---
import DashboardIcon from '../icons/DashboardIcon.astro';
import AnalyticsIcon from '../icons/AnalyticsIcon.astro';
import BillingIcon from '../icons/BillingIcon.astro';
import SettingsIcon from '../icons/SettingsIcon.astro';
import logo from '../assets/logo.png';

const menuItems = [
    { 
        href: '/', 
        icon: DashboardIcon, 
        label: 'Overview',
        isActive: Astro.url.pathname === '/'
    },
    { 
        href: '/analytics', 
        icon: AnalyticsIcon, 
        label: 'Analytics',
        isActive: Astro.url.pathname.includes('/analytics')
    },
    { 
        href: '/billing', 
        icon: BillingIcon, 
        label: 'Billing',
        isActive: Astro.url.pathname.includes('/billing')
    },
    { 
        href: '/settings', 
        icon: SettingsIcon, 
        label: 'Settings',
        isActive: Astro.url.pathname.includes('/settings')
    }
];
---

<aside class="fixed left-0 top-0 h-full w-64 bg-white border-r shadow-md">
    <div class="p-6">
        <img src={logo} alt="SaaS Platform Logo" class="mb-8 max-w-full h-auto">
        
        <nav>
            <ul class="space-y-2">
                {menuItems.map((item) => (
                    <li>
                        <a 
                            href={item.href} 
                            class={`
                                flex items-center p-3 rounded-lg transition-colors duration-200
                                ${item.isActive 
                                    ? 'bg-blue-100 text-blue-600' 
                                    : 'hover:bg-gray-100 text-gray-600'}
                            `}
                        >
                            <item.icon class="w-6 h-6 mr-3" />
                            <span class="font-medium">{item.label}</span>
                        </a>
                    </li>
                ))}
            </ul>
        </nav>
    </div>
</aside>