---
const { title } = Astro.props;
---

<header class="flex justify-between items-center pb-6 border-b">
    <h2 class="text-3xl font-semibold text-gray-800">{title}</h2>
    
    <div class="flex items-center space-x-4">
        <div class="relative">
            <input 
                type="text" 
                placeholder="Search..." 
                class="bg-gray-100 rounded-full px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-300"
            />
        </div>
        
        <div class="relative">
            <a href="/recording">
                <button class="bg-blue-500 text-white px-4 py-2 rounded-full hover:bg-blue-600 transition-colors">
                    New Recording
                </button>
            </a>
        </div>
        
        <div class="relative">
            <svg class="w-10 h-10 rounded-full border-2 border-gray-200 bg-gray-100 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
            </svg>
        </div>
    </div>
</header>