---
import Sidebar from '../components/Sidebar.astro';
import Header from '../components/Header.astro';

const { title = 'Recording' } = Astro.props;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | SaaS Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen flex">
    <Sidebar />
    
    <main class="flex-grow bg-white ml-64 p-8">
        <Header title={title} />
        
        <div class="mt-8">
            <slot />
        </div>

        <div class="mt-8 p-4 border border-gray-300 rounded">
            <h2 class="text-lg font-bold mb-4">Interview Preparation</h2>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700" for="field">1. What is the field you are interviewing for?</label>
                <input type="text" id="field" name="field" class="mt-1 p-2 block w-full border border-gray-300 rounded-md" />
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700" for="role">2. What role are you interviewing for?</label>
                <input type="text" id="role" name="role" class="mt-1 p-2 block w-full border border-gray-300 rounded-md" />
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700" for="company">3. What company are you interviewing for?</label>
                <input type="text" id="company" name="company" class="mt-1 p-2 block w-full border border-gray-300 rounded-md" />
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700" for="tone">6. Select Your Tone:</label>
                <select id="tone" name="tone" class="mt-1 block w-full p-2 border border-gray-300 rounded-md">
                    <option value="calm">Calm</option>
                    <option value="excited">Excited</option>
                    <option value="enthusiastic">Enthusiastic</option>
                    <option value="assertive">Assertive</option>
                    <option value="confident">Confident</option>
                    <option value="casual">Casual</option>
                </select>
            </div>
        </div>
    </main>
</body>
</html>