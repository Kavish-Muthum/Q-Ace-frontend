---
import Sidebar from '../components/Sidebar.astro';
import Header from '../components/Header.astro';

const { title = 'Recording' } = Astro.props;
---

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | SaaS Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen font-montserrat">
    <div class="flex">
        <Sidebar />
        
        <main class="flex-grow p-8">
            <Header title={title} />
            
            <div class="mt-8">
                <div class="bg-white p-8 rounded-lg shadow-md">
                    <h1 class="text-2xl font-bold text-blue-600 mb-6">Aim to Impress your Interviewer</h1>
                    <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4" placeholder="What is the field you are interviewing for?" />
                    <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4" placeholder="What role are you interviewing for?" />
                    <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4" placeholder="What company are you interviewing for?" />
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-md mb-6">
                        <option value="" disabled selected>Select your tone</option>
                        <option value="calm">Calm</option>
                        <option value="assertive">Assertive</option>
                        <option value="excited">Excited</option>
                        <option value="enthusiastic">Enthusiastic</option>
                        <option value="confident">Confident</option>
                        <option value="casual">Casual</option>
                    </select>
                    <div class="flex justify-between">
                        <button class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Back</button>
                        <button class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Next</button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>

