---
import Sidebar from '../components/Sidebar.astro';
import Header from '../components/Header.astro';
import { get_company_interview_questions } from 'utils/convergent.js';

const { title = 'Recording' } = Astro.props;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | SaaS Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen flex">
    <Sidebar />
    
    <main class="flex-grow bg-white ml-64 p-8">
        <Header title={title} />
        
        <div class="mt-8">
            <slot />
        </div>

        <div class="mt-8 p-4 border border-gray-300 rounded">
            <h2 class="text-lg font-bold mb-4">Tell us more about your interview.</h2>
            <form id="interviewForm">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700" for="field">1. What is the field you are interviewing for?</label>
                    <input type="text" id="field" name="field" required class="mt-1 p-2 block w-full border border-gray-300 rounded-md" />
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700" for="role">2. What role are you interviewing for?</label>
                    <input type="text" id="role" name="role" required class="mt-1 p-2 block w-full border border-gray-300 rounded-md" />
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700" for="company">3. What company are you interviewing for?</label>
                    <input type="text" id="company" name="company" required class="mt-1 p-2 block w-full border border-gray-300 rounded-md" />
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700" for="tone">4. Select Your Tone:</label>
                    <select id="tone" name="tone" required class="mt-1 block w-full p-2 border border-gray-300 rounded-md">
                        <option value="">Please select your desired tone</option>
                        <option value="calm">Calm</option>
                        <option value="excited">Excited</option>
                        <option value="enthusiastic">Enthusiastic</option>
                        <option value="assertive">Assertive</option>
                        <option value="confident">Confident</option>
                        <option value="casual">Casual</option>
                    </select>
                </div>
                <div class="flex justify-end mt-6 space-x-4">
                    <button 
                        type="submit" 
                        id="beginRecording" 
                        class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                        Begin Recording
                    </button>
                </div>
            </form>
        </div>
    </main>
    <script>
      const form = document.getElementById('interviewForm');
      const beginRecordingBtn = document.getElementById('beginRecording');
    
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const data = {
          company: formData.get('company'),
          field: formData.get('field'),
          role: formData.get('role'),
          tone: formData.get('tone')
        };
    
        try {
          const questions = await get_company_interview_questions(data.company);
          
          // Store both questions and form data
          sessionStorage.setItem('interviewQuestions', JSON.stringify(questions));
          sessionStorage.setItem('interviewData', JSON.stringify(data));
          
          // Navigate to video page
          window.location.href = '/video';
        } catch (error) {
          console.error('Error:', error);
          alert('Failed to get interview questions. Please try again.');
        }
      });
    </script>

</body>
</html>